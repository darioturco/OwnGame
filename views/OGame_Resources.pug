extends Ogame_Layout
block content
  #inhalt
    #planet(style='background-image:url(./Imagenes/Planets/Resources_Planet_' + basic.planets[basic.numPlanet].type + '.jpg)')
      #header_text
        h2 Resources - #{basic.planets[basic.numPlanet].name}
      #slot01.slot
        a(href='./Ogame_ResourceSetings.html') Resource settings
      form(method='POST' action='' name='form' onkeyup='sendBuildRequest(null, event, false);' onsubmit='return false;')
        #detail.detail_screen
          #resources_3_large.pic
            a.techtree_link.tooltip.overlay(href='./Ogame_Tecnology.html')
              .techtree_img_disabled
              span.label Techtree
          #content
            h2 Deuterium Synthesizer
            a#close.close_details(href='javascript:void(0);' onclick='toggleDescription(-1); return false;')
            span.level
              | Level 8
              span.undermark
            br.clearfloat
            ul.production_info
              li
                | Production duration
                span#buildDuration.time
                  | 6m 9s
                  span.undermark
            a.demolish_link.tooltip.demolishDisabled(href='#demolish3' onclick='')
              .demolish_img_disabled
              span.label Tear down
            .costs_wrap
              p.costs_info Required to improve to level 9:
              ul#costs
                li.metal.tooltip
                  .resourceIcon.metal
                  .cost 5.766
                li.crystal.tooltip
                  .resourceIcon.crystal
                  .cost 1.922
                li.energy.tooltip
                  .resourceIcon.energy
                  .cost 82
            .build-it_wrap
              a.build-it(href='javascript:void(0);')
                span Improve
          br(clear='all')
          #description
            .txt_box
              a.tooltip.help.overlay(href='Ogame_Tecnology.html')
              p.description_txt(style='width: 90%')
                | Deuterium Synthesizers draw the trace Deuterium content from the water on a planet.
    .c-left
    .c-right
    #buttonz
      .header
        h2 Resource buildings
      .content
        ul#building
          li#button1.on
            // disable = rayado; on = prendido; off = blanco y negro
            .supply1
              .buildingimg
                a#details.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(1);return false;')
                  span.ecke
                    span.level
                      span.textlabel Metal Mine
                      | #{info.buildings.metalMine}
          li#button2.on
            .supply2
              .buildingimg
                a#details.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(2);return false;')
                  span.ecke
                    span.level
                      span.textlabel Crystal Mine
                      | #{info.buildings.crystalMine}
          li#button3.on
            .supply3
              .buildingimg
                a#details.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(3);return false;')
                  span.ecke
                    span.level
                      span.textlabel Deuterium Synthesizer
                      | #{info.buildings.deuteriumMine}
          li#button4.on
            .supply4
              .buildingimg
                a#details.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(4);return false;')
                  span.ecke
                    span.level
                      span.textlabel Solar Plant
                      | #{info.buildings.solarPlant}
          li#button5.on
            .supply12
              .buildingimg
                a#details.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(5);return false;')
                  span.ecke
                    span.level
                      span.textlabel Fusion Reactor
                      | #{info.buildings.fusionReactor}
          li#button6.on
            .supply212
              .buildingimg
                a#details.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(44);return false;')
                  span.ecke
                    span.level
                      span.textlabel Solar Satellite
                      | #{info.solarSatellite}
        ul#storage
          li#button7.on
            .supply22
              .buildingimg
                a#details.tooltip.slideIn(href='#' onclick='toggleDescription(6);return false;')
                  span.ecke
                    span.level
                      span.textlabel Metal Storage
                      | #{info.buildings.metalStorage}
          li#button8.on
            .supply23
              .buildingimg
                a#details.tooltip.slideIn(href='#' onclick='toggleDescription(7);return false;')
                  span.ecke
                    span.level
                      span.textlabel Crystal Storage
                      | #{info.buildings.crystalStorage}
          li#button9.on
            .supply24
              .buildingimg
                a#details.tooltip.slideIn(href='#' onclick='toggleDescription(8);return false;')
                  span.ecke
                    span.level
                      span.textlabel Deuterium Tank
                      | #{info.buildings.deuteriumStorage}
        .footer
        br.clearfloat
