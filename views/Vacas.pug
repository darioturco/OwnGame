extends Ogame_Layout
block content
  #inhalt
    #planet(style='background-image:url(./Imagenes/Shipyard/Vacas.jpg)')
      #header_text
        h2 Vacas - #{(basic.moon) ? basic.planets[basic.numPlanet].moon.name : basic.planets[basic.numPlanet].name}
    .c-left
    .c-right
    #buttonz
      .header
        h2 Vaca List
      .content
        table#vacaslist.content_table.ignorelist
          colgroup
            col(span='1' style='width: 20px;')
            col(span='1' style='width: 110px;')
            col(span='1' style='width: 110px;')
            col(span='1' style='width: 60px;')
            col(span='1' style='width: 80px;')
          thead
            tr.ct_head_row
              th.no.ct_th.first ID
              th.ct_th.ct_sortable_title Player
              th.ct_th.ct_sortable_title Planet
              th.ct_th.ct_sortable_title Coordinates
              th.ct_th.textCenter Actions
          tbody
            each item, index in vacas
              tr
                th #{index + 1}
                th #{item.playerName}
                th #{item.planetName}
                th
                  div.coordinatesDiv
                    a.coordinatesLink(href='./Ogame_Galaxy.html?gal=' + item.coordinates.gal + '&sys=' + item.coordinates.sys target='_self')
                      p [#{item.coordinates.gal}:#{item.coordinates.sys}:#{item.coordinates.pos}]
                th.action
                  a.tooltip(href='#' onclick='return false;' title='espiar')
                    span.icon.icon_eye
                  a.tooltip(href='#' onclick='return false;' title='reporte de espionage')
                    span.icon.icon_adressbook
                  a.tooltip(href='#' onclick='return false;' title='ataque personalisado')
                    span.icon.icon_missile
                  a.tooltip(href='#' onclick='return false;' title='ataque vaca')
                    span.icon.icon_against
                  a.tooltip(href='#' onclick='removeVaca(this, ' + item.coordinates.gal + ', ' + item.coordinates.sys + ', ' + item.coordinates.pos + ');' title='eliminar')
                    span.icon.icon_mail
      .footer
