extends Ogame_Layout
block content
  #inhalt
    #planet(style='background-image:url(./Imagenes/Shipyard/Defence.jpg)')
      #header_text
        h2 Defence - Planeta Principal
      form(method='POST' action='' name='form')
        #detail.detail_screen
          #defense_403_large.pic
            a.techtree_link.tooltip.overlay(href='./Ogame_Tecnology.html')
              .techtree_img
              span.label Techtree
          #content
            h2#nameText
            a#close.close_details(href='javascript:void(0);' onclick='toggleDescription("void");return false;')
            span#levelText.level
              | Number: 0
              span.undermark
            br.clearfloat
            ul.production_info.narrow
              li
                | Production duration
                span#buildDuration.time
                  | 0s
                  span.undermark
              li
                | Construction possible:
                span#possibleInTime.time now
            .enter
              p.amount Number:
              .clearfix.maxlink_wrap
                input#number.amount_input(type='text' pattern='[0-9,.]*' size='5' name='menge' value='')
                .maxlink_arrow
                a#maxlink.tooltip(href='javascript:void(0);' onclick="document.forms['form'].menge.value = 4;") [max. 4]
            .costs_wrap
              p.costs_info Costs per piece:
              ul#costs
                li.metal.tooltip
                  .resourceIcon.metal
                  #cost1.cost -
                li.crystal.tooltip
                  .resourceIcon.crystal
                  #cost2.cost -
                li.deuterium.tooltip
                  .resourceIcon.deuterium
                  #cost3.cost -
            .build-it_wrap
              .premium_info_placeholder
              a.build-it(href='javascript:void(0);')
                span Build
          br(clear='all')
          #description
            .txt_box
              a.tooltip.help.overlay(href='./Ogame_Tecnology.html')
              p#descriptionText.description_txt(style='width: 90%') The heavy laser is the logical development of the light laser.
    .c-left
    .c-right
    #buttonz
      .header
        h2 Defensive structures
      .content
        ul#defensebuilding
          li#defense1.on
            .item_box.defense401
              .buildingimg
                a#details401.detail_button.tooltip.slideIn(onclick='toggleDescription("rocketLauncher");return false;' href='javascript:void(0);')
                  span.ecke
                    span.level
                      span.textlabel Rocket Launcher
                      | 0
          li#defense2.on
