extends Ogame_Layout
block content
  #inhalt
    #planet(style='background-image:url(./Imagenes/Options.jpg)')
      #header_text
        h2 Options - #{(basic.moon) ? basic.planets[basic.numPlanet].moon.name : basic.planets[basic.numPlanet].name}
    .c-left
    .c-right
    #buttonz
      .header
        h2 Options Player
      .content
        div.itemOptions.fieldwrapper.textBeefy
          label Number of espionage probes:
          input#inputEspionage(type='number' value=info.esp)
        div.itemOptions.fieldwrapper.textBeefy
          label Number of Small Cargo:
          input#inputSmall(type='number' value=info.small)
        div.itemOptions.fieldwrapper.textBeefy
          label Number of Large Cargo:
          input#inputLarge(type='number' value=info.large)
        a.btn_blue(onclick='setOptions(); return false;') Save options
        if basic.hazards.length > 0
          a.btn_blue(onclick='clearHazards(); return false;') Clear Hazards
      .footer
