extends Ogame_Layout
block content
  #inhalt
    - var urlImg = (basic.moon ? './Imagenes/Planets/Buildings_Moon_' + basic.planets[basic.numPlanet].moon.type + '.jpg' : './Imagenes/Planets/Facilities_Planet_' + basic.planets[basic.numPlanet].type + '.jpg')
    #planet(style='background-image:url(' + urlImg + ');')
      #header_text(style='opacity: 1; display: block;')
        h2 Facilities - #{(basic.moon) ? basic.planets[basic.numPlanet].moon.name : basic.planets[basic.numPlanet].name}
      if basic.moon
        #slot01.slot
          a(href='./Ogame_ResourceSetings.html') Lunar Buildings
      #detail.detail_screen
        #imgBlackInfo.pic
          a.techtree_link.tooltip.overlay(href='./Ogame_Technology.html')
            .techtree_img
            span.label Techtree
          a#cancelButton.tooltip.abort_link(href='javascript:void(0);' onclick='cancelBuilding();')
        #content
          h2#nameText
          a#close.close_details(href='javascript:void(0);' onclick='toggleDescription("void"); return false;')
          span#levelText.level
            | Level 0
            span.undermark
          br.clearfloat
          ul.production_info
            li
              | Production duration:
              span#buildDuration.time
                | 0s
                span.undermark
            li
              | Construction possible:
              span#possibleInTime.time
          .costs_wrap
            p.costs_info Required to improve to the next level:
            ul#costs
              li.metal.tooltip
                .resourceIcon.descriptionIcon.metal
                #cost1.cost -
              li.crystal.tooltip
                .resourceIcon.descriptionIcon.crystal
                #cost2.cost -
              li.deuterium.tooltip
                .resourceIcon.descriptionIcon.energy
                #cost3.cost -
          .build-it_wrap
            a#build-it.build-it(href='javascript:void(0);' onclick='sendInproveRequest()')
              span Improve
        br
        #description
          .txt_box
            a.tooltip.help.overlay(href='./Ogame_Technology.html')
            p#descriptionText.description_txt(style='width: 90%')
    .c-left
    .c-right
    #buttonz
      .header
        h2 Facility buildings
      .content
        ul#stationbuilding
          if basic.moon
            li#button0.on
              .item_box.station1
                .stationlargeMoon.buildingimg
                  a#details14.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("lunarBase");return false;')
                    span.ecke
                      span.level
                        span.textlabel Lunar Base
                        | #{info.lunarBase}
            li#button1.on
              .item_box.station2
                .stationlargeMoon.buildingimg
                  a.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("phalanx");return false;')
                    span.ecke
                      span.level
                        span.textlabel Sensor Phalanx
                        | #{info.phalanx}
            li#button2.on
              .item_box.station3
                .stationlargeMoon.buildingimg
                  a.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("spaceDock");return false;')
                    span.ecke
                      span.level
                        span.textlabel Space Dock
                        | #{info.spaceDock}
            li#button3.on
              .item_box.station4
                .stationlargeMoon.buildingimg
                  a#details34.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("marketplace");return false;')
                    span.ecke
                      span.level
                        span.textlabel Marketplace
                        | #{info.marketplace}
            li#button4.on
              .item_box.station5
                .stationlargeMoon.buildingimg
                  a#details44.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("lunarSunshade");return false;')
                    span.ecke
                      span.level
                        span.textlabel Lunar Sunshade
                        | #{info.lunarSunshade}
            li#button5.on
              .item_box.station6
                .stationlargeMoon.buildingimg
                  a#details15.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("lunarBeam");return false;')
                    span.ecke
                      span.level
                        span.textlabel Lunar Beam
                        | #{info.lunarBeam}
            li#button6.on
              .item_box.station7
                .stationlargeMoon.buildingimg
                  a#details33.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("jumpGate");return false;')
                    span.ecke
                      span.level
                        span.textlabel Jump Gate
                        | #{info.jumpGate}
            li#button7.on
              .item_box.station8
                .stationlargeMoon.buildingimg
                  a#details33.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("moonShield");return false;')
                    span.ecke
                      span.level
                        span.textlabel Moon Shield
                        | #{info.moonShield}
          else
            li#button0.on
              .item_box.station1
                .stationlarge.buildingimg
                  a#details14.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("robotFactory");return false;')
                    span.ecke
                      span.level
                        span.textlabel Robotics Factory
                        | #{info.buildings.robotFactory}
            li#button1.on
              .item_box.station2
                .stationlarge.buildingimg
                  a.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("shipyard");return false;')
                    span.ecke
                      span.level
