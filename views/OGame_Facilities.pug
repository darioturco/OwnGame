            li#button6.on
              .item_box.station7
                .stationlarge.buildingimg
                  a#details33.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription("terraformer");return false;')
                    span.ecke
                      span.level
                        span.textlabel Terraformer
                        | #{info.buildings.terraformer}
        .footer
