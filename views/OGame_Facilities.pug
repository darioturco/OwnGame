extends Ogame_Layout
block content
  #inhalt
    #planet(style='background-image:url(./Imagenes/Planets/Facilities_Planet_1.jpg)')
      #header_text(style='opacity: 1; display: block;')
        h2 Facilities - Planeta Principal
      form(method='POST' action='' name='form')
        #detail.detail_screen
          #resources_3_large.pic
            a.techtree_link.tooltip.overlay(href='./Ogame_Tecnology.html')
              .techtree_img_disabled
              span.label Techtree
          #content
            h2 Deuterium Synthesizer
            a#close.close_details(href='javascript:void(0);' onclick='toggleDescription(-1); return false;')
            span.level
              | Level 8
              span.undermark
            br.clearfloat
            ul.production_info
              li
                | Production duration
                span#buildDuration.time
                  | 6m 9s
                  span.undermark
            a.demolish_link.tooltip.demolishDisabled(href='#demolish3' onclick='')
              .demolish_img_disabled
              span.label Tear down
            .costs_wrap
              p.costs_info Required to improve to level 9:
              ul#costs
                li.metal.tooltip
                  .resourceIcon.metal
                  .cost 5.766
                li.crystal.tooltip
                  .resourceIcon.crystal
                  .cost 1.922
                li.energy.tooltip
                  .resourceIcon.energy
                  .cost 82
            .build-it_wrap
              a.build-it(href='javascript:void(0);')
                span Improve
          br(clear='all')
          #description
            .txt_box
              a.tooltip.help.overlay(href='Ogame_Tecnology.html')
              p.description_txt(style='width: 90%')
                | Deuterium Synthesizers draw the trace Deuterium content from the water on a planet.
    .c-left
    .c-right
    #buttonz
      .header
        h2 Facility buildings
      .content
        ul#stationbuilding
          li#button0.on
            // disable = rayado; on = prendido; off = blanco y negro
            .item_box.station14
              .stationlarge.buildingimg
                a#details14.detail_button.tooltip.slideIn(href='#' onclick='toggleDescription(11);return false;')
                  span.ecke
                    span.level
                      span.textlabel Robotics Factory
