extends Ogame_Layout
block content
  #inhalt
    #buttonz
      .header
        h2 Highscore
      .content
        div#highscoreContent
          span.dropdown.currentlySelected.changeSite.fright(style='width: 150px; margin-right: 32px;')
            a#dropDown(href='javascript:void(0);')  1 - 100
          ul#dropDownList.dropdown.dropdownList.initialized(style='left: 488px; top: 34px; min-width: 150px; display:block;')
            - var n = 1;
            - var tope = Math.floor(max/100) + 1
            while n <= tope
              li
                a(onclick='setDropdown(100, 1)') #{(n*100-99) + ' - ' + (n*100)}
              - n++
          #highscoreHeadline.fleft
            | Points
          table#ranks.userHighscore
            thead
              tr
                td.position
                  | Position
                td.movement
                td.name
                  | Players Name
                td.score
                  | Points
            tbody
              - var i = 1
              while i <= 100
                tr#position1.alt
                  td.position
                    | #{i}
                  td.movement
                    span.undermark
                      span.stats_counter (3)
                  td.name
                    a.dark_highlight_tablet(href='')
                      span.playername
                        | -
                  td.score
                    | -
                - i++
      .footer
